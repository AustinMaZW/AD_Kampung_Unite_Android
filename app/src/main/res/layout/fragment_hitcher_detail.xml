<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ml.HitcherDetailFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="288dp"
            android:layout_height="28dp"
            android:text="Pick Up Detail"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"/>
        <EditText
            android:id="@+id/pick_up_date"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Pick Up Date"
            android:layout_gravity="center"
            android:textColorHint="#95a1aa"
            android:inputType="date"
            android:drawableLeft="@drawable/canlendar_input"
            android:drawablePadding="20dp"
            android:paddingLeft="20dp"
            android:layout_marginBottom="20dp"
            android:text="2021-10-29"/>
        <EditText
            android:id="@+id/locationAd"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Location"
            android:layout_gravity="center"
            android:textColorHint="#95a1aa"
            android:inputType="text"
            android:drawableLeft="@drawable/location_input"
            android:drawablePadding="20dp"
            android:paddingLeft="20dp"
            android:layout_marginBottom="20dp"
            android:text="220 Prince Edward Road, Singapore, Singapore"/>
        <EditText
            android:id="@+id/timeSlot_"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Time Slot"
            android:layout_gravity="center"
            android:textColorHint="#95a1aa"
            android:inputType="time"
            android:drawableLeft="@drawable/time_to_slot"
            android:drawablePadding="20dp"
            android:paddingLeft="20dp"
            android:layout_marginBottom="20dp"
            android:text="12:00:00"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button"
            android:id="@+id/submitBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="@color/Kampong_Blue"
            android:backgroundTint="@color/Kampong_Yellow" />

    </LinearLayout>


</FrameLayout>